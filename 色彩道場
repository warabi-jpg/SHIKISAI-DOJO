    function getRandomColors(group, count) {
      const keys = Object.keys(colorGroups[group]);
      const shuffled = keys.sort(() => 0.5 - Math.random());
      return shuffled.slice(0, count);
    }

    function generateColors() {
      const itemName = document.getElementById("itemName").value.trim();
      const count = parseInt(document.getElementById("colorCount").value);
      const group = document.getElementById("colorGroup").value;
      const selectedColors = getRandomColors(group, count);

      const colorContainer = document.getElementById("selectedColors");
      colorContainer.innerHTML = '';
      let names = [];

      selectedColors.forEach(hex => {
        names.push(colorGroups[group][hex]);
        const box = document.createElement("div");
        box.className = "color-box";
        box.style.backgroundColor = hex;
        box.textContent = colorGroups[group][hex];
        colorContainer.appendChild(box);
      });

      const result = document.getElementById("result");
      result.textContent = `${itemName}を${names.join("・")}で作ります。`;

      const url = new URL(location.href);
      url.searchParams.set('item', itemName);
      url.searchParams.set('colors', selectedColors.join(','));
      url.searchParams.set('group', group);

      const share = document.getElementById("share-buttons");
      share.innerHTML = `
        <a href="https://twitter.com/intent/tweet?text=${encodeURIComponent(result.textContent)}&url=${encodeURIComponent(url.toString())}" target="_blank">Xでシェア</a>
      `;
    }

    function uploadImage() {
      const fileInput = document.getElementById('imageInput');
      const title = document.getElementById('titleInput').value.trim();
      const comment = document.getElementById('commentInput').value.trim();

      if (!fileInput.files[0]) {
        alert("画像を選択してください。");
        return;
      }

      const reader = new FileReader();
      reader.onload = () => {
        const imageData = reader.result;
        const gallery = JSON.parse(localStorage.getItem('gallery') || '[]');
        const newItem = {
          id: Date.now(),
          image: imageData,
          title,
          comment
        };
        gallery.push(newItem);
        localStorage.setItem('gallery', JSON.stringify(gallery));
        displayGallery();
        alert("投稿が完了しました。（このデモではローカル保存のみです）");
      };
      reader.readAsDataURL(fileInput.files[0]);
    }

    function displayGallery() {
      const galleryData = JSON.parse(localStorage.getItem('gallery') || '[]');
      const container = document.getElementById("gallery");
      container.innerHTML = '';
      galleryData.forEach(item => {
        const div = document.createElement("div");
        div.className = "gallery-item";
        div.innerHTML = `
          <img src="${item.image}" onclick="alert('タイトル: ${item.title}\\nコメント: ${item.comment}')"><br/>
          <small>${item.title}</small>
        `;
        container.appendChild(div);
      });
    }

    displayGallery();
  </script>
</body>
</html>
